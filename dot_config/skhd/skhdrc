# Ctrl+[ (0x21) to Go backwards
ctrl - 0x21 [
    "code"              ~
    "iTerm2"            ~
    "JetBrains Rider"   ~
    "kitty"             ~
    "Spotify"           :   skhd -k "alt - left"
    "Terminal"          ~
    "WezTerm"           ~
    "zed"               ~
    *                   :   skhd -k "cmd - 0x21"
]
# Ctrl+] (0x1E) to Go forwards
ctrl - 0x1E [
    "code"              ~
    "iTerm2"            ~
    "JetBrains Rider"   ~
    "kitty"             ~
    "Spotify"           :   skhd -k "alt - right"
    "Terminal"          ~
    "WezTerm"           ~
    "zed"               ~
    *                   :   skhd -k "cmd - 0x1E"
]
# map ⌘+[ to ⌥+← in Spotify
cmd - 0x21 [
    "Spotify"   :   skhd -k "alt - left"
    *           ~
]
# map ⌘+] to ⌥+→ in Spotify
cmd - 0x1E [
    "Spotify"   :   skhd -k "alt - right"
    *           ~
]
# ctrl+/ (0x2C) to Undo
ctrl - 0x2C [
    "code"              ~
    "iTerm2"            ~
    "JetBrains Rider"   ~
    "kitty"             ~
    "Terminal"          ~
    "WezTerm"           ~
    "zed"               ~
    *                   :   skhd -k "cmd - z"
]
