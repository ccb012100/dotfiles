# Ctrl+[ (0x21) to go backwards
ctrl - 0x21 [
    "code"      ~
    "kitty"     ~
    "zed"       ~
    "Terminal"  ~
    "iTerm2"    ~
    "JetBrains Rider" ~
    "Spotify"   :   skhd -k "alt - left"
    *           :   skhd -k "cmd - 0x21"
]
# Ctrl+] (0x1E) to go forwards
ctrl - 0x1E [
    "code"      ~
    "kitty"     ~
    "zed"       ~
    "Terminal"  ~
    "iTerm2"    ~
    "JetBrains Rider" ~
    "Spotify"   :   skhd -k "alt - right"
    *           :   skhd -k "cmd - 0x1E"
]
# map ⌘+[ to ⌥+← in Spotify
cmd - 0x21 [
    "Spotify"   :   skhd -k "alt - left"
    *           ~
]
# map ⌘+] to ⌥+→ in Spotify
cmd - 0x1E [
    "Spotify"   :   skhd -k "alt - right"
    *           ~
]
# ctrl+/ (0x2C) to undo
ctrl - 0x2C [
    "code"      ~
    "kitty"     ~
    "zed"       ~
    "Terminal"  ~
    "iTerm2"    ~
    "JetBrains Rider" ~
    *           :   skhd -k "cmd - z"
]
