# (kVK_Comma = 0x2B)
ctrl - 0x2B [
    "code"      ~
    "kitty"     ~
    "zed"       ~
    "Terminal"  ~
    "iTerm2"    ~
    "JetBrains Rider" ~
    *           :   skhd -k "cmd - 0x2B"
