# Ghostty configuration file (https://ghostty.org/docs/config/reference)
#
# comments must be on stand-alone lines (not in-line with config options)
#
# TODO: pane border? copy on select? rotate splits? swap splits? indicate zoomed pane in UI?

font-family = Cascadia Mono NF
font-size = 16
# font-size setting seems to require restarting the app entirely
window-title-font-family = Fixedsys Core

clipboard-trim-trailing-spaces = true
clipboard-paste-protection = true

undo-timeout = 5m

#
# macOS
#
macos-shortcuts = deny
macos-titlebar-style = tabs

#
# theming
#
theme = Blue Matrix
# background = 000000

#
# Window UI
#
unfocused-split-fill = "#FF9000"

unfocused-split-opacity = 0.85
split-divider-color = "#fff000"

window-padding-x = 10
window-padding-y = 10

window-height = 60
window-width = 120

#
# keybindings
#
keybind = ctrl+space=toggle_command_palette
keybind = shift+space=toggle_command_palette

# super + shift + w               close_window
# super + w                       close_surface
# super + k                       clear_screen
# super + n                       new_window
keybind = ctrl+j>n=new_window

# super + q                       quit

keybind = ctrl+slash=undo
keybind = shift+ctrl+slash=redo

keybind = ctrl+j>equal=reset_font_size

##
## Clipboard
##
keybind = performable:ctrl+c=copy_to_clipboard
keybind = shift+ctrl+c=copy_to_clipboard

keybind = shift+ctrl+v=paste_from_clipboard

keybind = ctrl+j>a=select_all

##
## F-keys
##
keybind = ctrl+j>f1=inspector:toggle
keybind = ctrl+j>f5=reload_config
keybind = ctrl+j>f11=toggle_fullscreen

##
## Tabs
##
keybind = ctrl+j>t=new_tab

keybind = super+digit_9=last_tab
keybind = alt+digit_1=goto_tab:1
keybind = alt+digit_2=goto_tab:2
keybind = alt+digit_3=goto_tab:3
keybind = alt+digit_4=goto_tab:4
keybind = alt+digit_5=goto_tab:5
keybind = alt+digit_6=goto_tab:6
keybind = alt+digit_7=goto_tab:7
keybind = alt+digit_8=goto_tab:8
keybind = alt+digit_9=last_tab
keybind = alt+1=goto_tab:1
keybind = alt+2=goto_tab:2
keybind = alt+3=goto_tab:3
keybind = alt+4=goto_tab:4
keybind = alt+5=goto_tab:5
keybind = alt+6=goto_tab:6
keybind = alt+7=goto_tab:7
keybind = alt+8=goto_tab:8
keybind = alt+9=last_tab

##
## Splits (panes)
##
keybind = ctrl+j>h=goto_split:left
keybind = ctrl+j>j=goto_split:down
keybind = ctrl+j>k=goto_split:up
keybind = ctrl+j>l=goto_split:right
keybind = ctrl+j>ctrl+j=goto_split:next
keybind = ctrl+j>shift+ctrl+j=goto_split:previous

keybind = ctrl+j>enter=new_split:right
keybind = ctrl+j>space=new_split:down

keybind = ctrl+j>z=toggle_split_zoom
